daemonize yes
pidfile /var/run/redis/redis-server.pid
logfile /var/log/redis/redis-server.log

port 6379
<% unless node[:redis] && node[:redis][:dont_bind] %>
  bind 127.0.0.1
<% end %>
timeout 300

loglevel notice

## Default configuration options
databases 16

save 900 1
save 300 10
save 60 10000

rdbcompression yes
dbfilename dump.rdb

# setup persistance
dir /var/lib/redis
appendonly yes

# setup flush to disk everysec
appendfsync everysec
